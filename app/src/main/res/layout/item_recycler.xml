<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="@dimen/width_thumb_movie_list"
        android:layout_height="@dimen/height_thumb_movie_list"
        android:contentDescription="@string/image_description"
        android:scaleType="fitXY"
        tools:src="@drawable/poster_aquaman" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_thumb_movie_list"
        android:layout_marginLeft="@dimen/padding_thumb_movie_list"
        android:layout_toEndOf="@id/iv_poster"
        android:layout_toRightOf="@id/iv_poster"
        android:maxLines="2"
        tools:text="@string/movie_name" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_marginStart="@dimen/padding_thumb_movie_list"
        android:layout_marginLeft="@dimen/padding_thumb_movie_list"
        android:layout_marginTop="@dimen/padding_subtitle_movie_list"
        android:layout_toEndOf="@id/iv_poster"
        android:layout_toRightOf="@id/iv_poster"
        android:ellipsize="end"
        android:maxLines="3"
        tools:text="@string/movie_description" />

</RelativeLayout>